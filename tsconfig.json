{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "ES2016", "ES2017"],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {},
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
